<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bisne macrame | HOME</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/login.css">
    </head>
    <body>
        <%- include('../partials/header.ejs')%>
        <main>
            <%- include('../partials/sidebar.ejs')%>
            <div class="main-header">
                <p>Iniciar sesión</p>
            </div>
            <div class="form">
                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" class="<%= locals.errors && errors.email ? 'input-error' : ''  %>" value="<%= locals.oldData ? oldData.email : null %>">
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-error">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="password" class="<%= locals.errors && errors.password ? 'input-error' : ''  %>">
                        <% if (locals.errors && errors.password) { %>
                            <div class="text-error">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                    </div>
                    <div class="form-group" id="rememberUser">
                        <input type="checkbox" id="remember_user" name="remember_user" />
                        <label for="remember_user">Recordar usuario</label>
                    </div>
                    <button type="submit">Iniciar sesión</button>
                </form>
                <p>Si no tienes una cuenta, crea una <a href="signup">aquí</a>.</p>
            </div>
        </main>
        <%- include('../partials/footer.ejs')%>
        <script>
            /*Set ancho de sidebar*/
            function openNav() {
                document.getElementById("mySidebar").style.width = "300px";
                document.getElementByTagName("body").style.marginLeft = "300px";
            }

            /*Set posición de sidebar*/
            function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            }

            //Obtener del menú "Categorías" y su submenú
            const categoriasMenu = document.querySelector('.menu-item');
            const submenu = document.querySelector('.submenu');

            //Agrega un evento de clic al elemento del menú "Categorías"
            categoriasMenu.addEventListener('click', function() {
                // Alternar la clase "collapsed" en el elemento del menú "Categorías"
                categoriasMenu.classList.toggle('collapsed');
                // Mostrar u ocultar el submenú
                submenu.style.display = submenu.style.display === 'none' ? 'block' : 'none';
            });

            categoriasMenu.addEventListener('click', function() {
                // Alternar la clase "open" en el elemento del menú "Categorías"
                categoriasMenu.classList.toggle('open');
                submenu.style.display = categoriasMenu.classList.contains('open') ? 'block' : 'none';
                });
        </script>
    </body>
</html>