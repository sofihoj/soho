<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bisne macrame | Edit profile</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="/css/signup.css">
    </head>
    <body>
        <%- include('../partials/header.ejs')%>
        <main>
            <%- include('../partials/sidebar.ejs')%>
            <div class="main-header">
                <p>Crea tu cuenta</p>
            </div>
            <div class="form">
                <form action="/users/profile/edit?_method=PUT" method="POST">
                    <div class="inputs">
                        <div class="input-box">
                            <input type="text" name="name" id="formName" placeholder="Nombre" class="<%= locals.errors && errors.name ? 'input-error' : ''  %>" value="<%= user.nombre %>">
                            <% if (locals.errors && errors.name) { %>
                                <div class="text-error">
                                    <%= errors.name.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="input-box">
                            <input type="text" name="lastName" id="formLastName" placeholder="Apellido" class="<%= locals.errors && errors.lastName ? 'input-error' : null  %>" value="<%= user.apellido %>">
                            <% if (locals.errors && errors.lastName) { %>
                                <div class="text-error">
                                    <%= errors.lastName.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="input-box">
                            <input type="email" id="email" name="email" placeholder="Email" class="<%= locals.errors && errors.email ? 'input-error' : ''  %>" value="<%= user.email %>">
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-error">
                                    <%= errors.email.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="input-box">
                            <input type="text" name="phoneNumber" id="formNumber" placeholder="Nro. de teléfono" class="<%= locals.errors && errors.phoneNumber ? 'input-error' : ''  %>" value="<%= user.telefono %>">
                            <% if (locals.errors && errors.phoneNumber) { %>
                                <div class="text-error">
                                    <%= errors.phoneNumber.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="input-box">
                            <input type="text" name="city" id="city" placeholder="Ciudad" class="<%= locals.errors && errors.city ? 'input-error' : ''  %>" value="<%= user.ciudad %>">
                            <% if (locals.errors && errors.city) { %>
                                <div class="text-error">
                                    <%= errors.city.msg %>
                                </div>
                            <% } %>
                        </div>
                        <div class="input-box">
                            <input type="text" name="address" id="address" placeholder="Dirección" class="<%= locals.errors && errors.address ? 'input-error' : ''  %>" value="<%= user.direccion %>">
                            <% if (locals.errors && errors.address) { %>
                                <div class="text-error">
                                    <%= errors.address.msg %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <button type="submit">Actualizar datos</button>
                </form>
                <form class="form" action="/users/profile/edit-password?_method=PUT" method="POST">
                    <p>Quieres cambiar la contrseña?</p>
                    <div class="input-box">
                        <input type="password" name="password" placeholder="Contraseña actual" class="<%= locals.errors && errors.password ? 'input-error' : null  %>" >
                        <% if (locals.errors && errors.password) { %>
                            <div class="text-error">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-box">
                        <input type="password" name="newPassword" placeholder="Nueva contraseña" class="<%= locals.errors && errors.passwordRepeat ? 'input-error' : ''  %>" >
                        <% if (locals.errors && errors.newPassword) { %>
                            <div class="text-error">
                                <%= errors.newPassword.msg %>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-box">
                        <input type="password" name="passwordRepeat" placeholder="Repetir nueva contraseña" class="<%= locals.errors && errors.passwordRepeat ? 'input-error' : ''  %>" >
                        <% if (locals.errors && errors.passwordRepeat) { %>
                            <div class="text-error">
                                <%= errors.passwordRepeat.msg %>
                            </div>
                        <% } %>
                    </div>
                    <button type="submit">Cambiar contraseña</button>
                </form>
            </div>
        </main>
        <%- include('../partials/footer.ejs')%>
        <script>
            /*Set ancho de sidebar*/
            function openNav() {
                document.getElementById("mySidebar").style.width = "300px";
                document.getElementByTagName("body").style.marginLeft = "300px";
            }

            /*Set posición de sidebar*/
            function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
            }

            //Obtener del menú "Categorías" y su submenú
            const categoriasMenu = document.querySelector('.menu-item');
            const submenu = document.querySelector('.submenu');

            //Agrega un evento de clic al elemento del menú "Categorías"
            categoriasMenu.addEventListener('click', function() {
                // Alternar la clase "collapsed" en el elemento del menú "Categorías"
                categoriasMenu.classList.toggle('collapsed');
                // Mostrar u ocultar el submenú
                submenu.style.display = submenu.style.display === 'none' ? 'block' : 'none';
            });

            categoriasMenu.addEventListener('click', function() {
                // Alternar la clase "open" en el elemento del menú "Categorías"
                categoriasMenu.classList.toggle('open');
                submenu.style.display = categoriasMenu.classList.contains('open') ? 'block' : 'none';
                });
        </script>
    </body>
</html>