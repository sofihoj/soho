                        <li><a href="/categories/<%= categoria.categoria %>"><%= categoria.categoria %></a></li>
                    <% }); %>
                </ul>
            </li>
            <li><a href="#">Sobre nosotros</a></li>
            <li><a href="#">Envíos</a></li>
            <li><a href="#">Contacto</a></li>
        </ul>
        <div class="dark-mode sidebar-toggle">
            <p>Modo oscuro</p>
            <label class="toggle toggle-sidebar" onclick="toggleDarkMode('sidebar')">
                <input type="checkbox" onclick="toggleDarkMode('sidebar')">
                <span class="slider"></span>
                <span class="labels" data-on="ON" data-off="OFF"></span>
            </label>
        </div>
    </div>
    <div class="bottom-sidebar">
        <ul>
            <li><a href="/productCart"><i class="fas fa-light fa-cart-shopping"></i>Carrito</a></li>
            <% if (locals.isLogged) { %>
                <li><a href="/users/profile"><i class="fa-solid fa-user"></i>Mi perfil</a></li>
            <% } else { %>
                <li><a href="/users/login"><i class="fas fa-regular fa-arrow-right-to-bracket"></i>Login</a></li>
            <% } %>
        </ul>
    </div>
</aside>