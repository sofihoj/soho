<aside id="mySidebar">
    <div class="top-sidebar">
        <div class="search-input">
            <input type="text" placeholder="Buscar">
        </div>
        <div class="close-icon">
            <i class="fas fa-xmark" onclick="closeNav()"></i>
        </div>
    </div>
    <div class="main-sidebar">
        <ul class="main-menu">
            <li><a href="/index">Inicio</a></li>
            <li class="menu-item"><a href="#">Categorías <span class="arrow">&#9658;</span></a>
                <ul class="submenu">
                    <!-- <li><a href="/categories/tapices">Tapices</a></li>
                    <li><a href="/categories/espejos">Espejos </a></li>
                    <li><a href="/categories/cuelgaMacetas">Cuelga macetas</a></li>
                    <li><a href="/categories/sujetaCortinas">Sujeta cortinas</a></li>
                    <li><a href="/categories/varios">Varios</a></li> -->
